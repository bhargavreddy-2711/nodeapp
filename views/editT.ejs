<%- include('./partial/header'); %>
<br><br><br><br>
<div class="container" style=" position: relative;border-radius: 5px;background-color: #c7eff5;padding: 20px 0 30px 0;width: 40%;">
      <form action="/techlead/<%=techlead._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center; color: black; font:italic">Edit Profile  <%= techlead.name%></h1>

            <div class="form-group form-inline">
              <label
                for="name" style="width: 100px;display: inline-block;text-align: right;">Name</label> &nbsp
              <input class="form-control" type="text" id="name" value="<%= techlead.name%>" name="techlead[name]" style="background-color: bisque; color: black;"/>
            </div>

            <div class="form-group form-inline">
              <label for="username" style="width: 100px; display: inline-block; text-align: right; " >Username</label> &nbsp
              <input class="form-control" type="text" id="username" value="<%= techlead.username%>" name="techlead[username]" style="background-color: bisque; color: black;"/>
            </div>

            <div class="form-group form-inline">
              <label for="department" style="width: 100px; display: inline-block; text-align: right; ">Department</label> &nbsp
              <input class="form-control" type="text" id="salary" value="<%= techlead.department%>" name="techlead[department]" style="background-color: bisque; color: black;"/>
            </div>

            <div class="form-group form-inline">
              <label for="salary" style="width: 100px; display: inline-block; text-align: right; ">Salary</label> &nbsp
              <input class="form-control" type="text" id="salary" value="<%= techlead.salary%>" name="techlead[salary]" style="background-color: bisque; color: black;"/>
            </div>

            <div class="form-group form-inline">
              <label for="url" style="width: 100px; display: inline-block; text-align: right; ">Image-url</label> &nbsp
              <input class="form-control" type="text" id="url" value="<%= techlead.image%>" name="techlead[image]" style="background-color: bisque; color: black;"/>
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>

          </div>
        </div>
      </form>
      <a href="/techlead/<%= techlead.id%>" style="color:rgb(10, 10, 10);">Back</a>
</div>

<%- include('./partial/footer'); %>