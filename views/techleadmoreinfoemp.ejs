<%- include('./partial/header'); %>

<style>
  h3,h1{color:black;}
</style>

<div class="col-sm-9" style="margin: 50px 125px;    text-align: -webkit-center; border: 1px solid black; background-color: #c7eff5;">
  <form action="/techlead/<%=techlead.id%>/leave/<%=employee.id%>/info" method="POST">
    <div class="container-fluid bg-3 text-center">
      <h1><%=employee.name %></h1>
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img style="border-radius: 100%" src="<%=employee.image%>" alt="image"/>
        </div>
        <%employee.leaves.forEach(function(leave){%>
        <div class="col-sm-4">
          <h3><strong> Subject:</strong><%=leave.subject %></h3>
          <h3>Status:<%=leave.techleadstatus %></h3>
          <h3>From:<%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>To:<%=moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><%=leave.days%></h3>
          <h3>Salary:<%=employee.salary%></h3>
          <h3>Department:<%=employee.department %></h3>
          <div style="float:inherit">
            <input type="submit" class="btn btn-block btn-success" name="action" value="Approve"/>
            <input type="submit" class="btn btn-block btn-danger" name="action" value="Decline"/>
          </div>
        </div>

        <%})%>
      </div>
    </div>
  </form>
</div>
<%- include('./partial/footer'); %>