<%- include('./partial/header'); %>

<br><br><br><br>
<div class="container" style=" position: relative; border-radius: 5px; background-color: #c7eff5; padding: 60px 0 30px 0; width: 40%;">
      <form action="/employee/<%=employee._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
              <h1 style="text-align:center;">Edit Profile <%= employee.name%></h1>

              <div class=" form-group form-inline">
                  <label for="name" style="width: 150px; display: inline-block; text-align: right;">Name</label> &nbsp &nbsp
                  <input class="form-control" type="text" id="name" value="<%= employee.name%>" name="employee[name]" style="background-color: bisque; color: black;"/>
              </div>

              <div class=" form-group form-inline">
                  <label for="username" style="width: 150px; display: inline-block; text-align: right;">Username</label> &nbsp &nbsp
                  <input class="form-control" type="text" id="username" value="<%= employee.username%>" name="employee[username]" style="background-color: bisque; color: black;"/>
              </div>

              <div class=" form-group form-inline">
                  <label for="department" style="width: 150px; display: inline-block; text-align: right;">Department</label> &nbsp &nbsp
                  <input class="form-control" type="text" id="department" value="<%= employee.department%>" name="employee[department]" style="background-color: bisque; color: black;"/>
              </div>

              <div class=" form-group form-inline">
                  <label for="salary" style="width: 150px; display: inline-block; text-align: right;">Salary</label> &nbsp &nbsp
                  <input class="form-control" type="text" id="Salary" value="<%= employee.salary%>" name="employee[salary]" style="background-color: bisque; color: black;"/>
              </div>

              <div class=" form-group form-inline">
                  <label for="url" style="width: 150px; display: inline-block; text-align: right;">Image-url</label> &nbsp &nbsp
                  <input class="form-control" type="text" id="url" value="<%= employee.image%>" name="employee[image]" style="background-color: bisque; color: black;"/>
              </div>

              <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block">Submit</button>
              </div>
          </div>
        </div>
        
      </form>
      <a href="/employee/<%= employee.id%>" style="color:black">Back</a>
    </div>
  </div>
</div>

<%- include('./partial/footer'); %>