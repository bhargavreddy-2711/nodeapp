<%- include('./partial/header'); %>


<script>
  function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
  </script>
  

<div class="container" style=" position: relative; border-radius: 5px; background-color: #c7eff5; padding: 20px 0 30px 0; width: 30%; margin: 150px auto;">
  <form action="/employee/login" method="POST" autocomplete="on">
    <div class="row">
      <div class="col">
        <h2 style="text-align: center; color: black;">Login</h2>
        <div class="form-group">
          <input class="form-control" type="text" name="username" placeholder="Username" style="background-color: bisque; color: black;"/>
        </div>

        <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="password" id="myInput" style="background-color: bisque; color: black;"/>
          <input type="checkbox" onclick="myFunction()" style="background-color: bisque; color: black;">Show Password
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-rounded btn-primary btn-block " >Login</button>
        </div>
      </div>
    </div>
  </form>
  <a style="width: 100%; padding: 12px; border: none;color: black; border-radius: 4px; margin: 5px 0; opacity: 0.85; display: inline-block; font-size: 17px; line-height: 20px;text-decoration: none;" href="/">Go Back</a>
</div>

<%- include('./partial/footer'); %>