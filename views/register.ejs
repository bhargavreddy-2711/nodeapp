<%- include('./partial/header'); %>

<div class="lop"style="border:1px solid pink;">
    <% if (locals.errors) { %>
      <div class="alert alert-danger" role="alert"style="">
        <% locals.errors.forEach(function(errors) { %>
        <h5><%= errors.msg %></h5>

        <% }); %>
      </div>
      <% } %>
</div>

<br><br><br><br><br>
<div class="container" style=" position: relative; border-radius: 5px; background-color: #c7eff5; padding: 60px 0 30px 0; width: 40%; ">
        <form action="/employee/register" method="POST" style="margin: 0 auto;" autocomplete="on">
          <div class="row">
            <div class="col">
              <h2 style="text-align: center; color: black;">Register</h2>

              <div class="form-group form-inline">
                <label for="name" style="width: 200px; display: inline-block; text-align: right;">Name</label>&nbsp; &nbsp;
                <input class="form-control" type="text" id="name" placeholder="name" name="name" style="float: left; text-align: left; background-color: bisque; color: black;"/>
              </div>
              
              <div id="rates" class="form-group"style="width: 400px; display: inline-block; text-align: right;">&nbsp; &nbsp;
                <input type="radio" id="r1" name="type" value="employee"  style="background-color: bisque; color: black;"/>
                employee
                <input type="radio" id="r2" name="type" value="manager" style="background-color: bisque; color: black;" />
                manager
                <input type="radio" id="r3" name="type" value="techlead"  style="background-color: bisque; color: black;"/>
                techlead
              </div>

              
              <div class="form-group form-inline">
                  <label for="username" style="width: 200px; display: inline-block; text-align: right;">Username</label>&nbsp; &nbsp;
                <input class="form-control" type="text" id="username" placeholder="username" name="username" style="background-color: bisque; color: black;"/>
              </div>
              <!-- password -->
              <div class="form-group form-inline">
                  <label for="password" style="width: 200px; display: inline-block; text-align: right; ">Password</label>&nbsp; &nbsp;
                <input class="form-control" type="password" name="password" id="password" placeholder="password" style="background-color: bisque; color: black;"/>
              </div>
              <!-- confirm password -->
              <div class="form-group form-inline">
                  <label for="cpassword"style="width: 200px; display: inline-block; text-align: right;">Confirm Password</label>&nbsp; &nbsp;
                <input class="form-control" type="password" id="cpassword" name="password2" placeholder="Confirm password" style="background-color: bisque; color: black;"/>
              </div>
              <!-- Department -->
              <div class="form-group form-inline">
                  <label for="department"style="width: 200px; display: inline-block; text-align: right;">Department</label>&nbsp; &nbsp;
                <input class="form-control" type="text" placeholder="Department" id="department" name="department" style="background-color: bisque; color: black;"/>
              </div>
              <!-- salary -->
              <div class="form-group form-inline">
                  <label for="salary" style="width: 200px; display: inline-block; text-align: right;">Salary</label>&nbsp; &nbsp;
                <input class="form-control" type="text" name="salary" id="salary" placeholder="Salary" style="background-color: bisque; color: black;"/>
              </div>
              <!-- image -->
              <div class="form-group form-inline">
                  <label for="img"style="width: 200px; display: inline-block; text-align: right;">Image Url</label>&nbsp; &nbsp;
                <input class="form-control" type="text" id="img" placeholder="img url" name="image" style="background-color: bisque; color: black;"/>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-default btn-block" style=" color:#fff;">Submit</button>
              </div>
            </div>
          </div>
          <!-- name -->
        </form>

        <a href="/" style="color:black;">Back</a>
      </div>
    </div>
  </div>
  <%- include('./partial/footer'); %>
</div>