<%- include('./partial/header'); %> 
<%- include('./partial/empfunction'); %>

<div class="col-sm-6" style="flex: 0 0 50%; max-width: 50%; margin-left: 25%; margin-top: -240px;  text-align: -webkit-center; border:1px">
  <h1 style="color:black">Apply for leave here <%=employee.name%></h1>
  <form action="/employee/<%=employee._id%>/apply" method="POST">

    <div class="form-group">
      <input type="text" placeholder="subject" name="leave[subject]" class="form-control"/>
    </div>
    <div class="row">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <div class="form-group column" >
      <label for="from">From:</label>
      <input type="date" data-date-inline-picker="true" id="from" name="leave[from]"/>
    </div> &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  
    <div class="form-group column">
      <label for="to">To:</label>
      <input type="date" data-date-inline-picker="true" id="to" name="leave[to]"/>
    </div>
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-block btn-primary">Submit</button>
    </div>
    &nbsp;&nbsp;
  </form>
  <%- include('./partial/footer'); %>
</div>